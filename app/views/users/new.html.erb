<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :type %>
  <%= f.select :type, [['Estudante', 'Student'], ['Professor', 'Teacher']] %>

  <%= f.submit %>
<% end %>